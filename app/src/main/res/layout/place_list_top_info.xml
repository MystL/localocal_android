<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/BlackTransluscent"
        >
        
        <TextView 
            android:id="@+id/top_info__lbl_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            />
    	
        <RelativeLayout
            android:id="@+id/top_info__options_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_info__lbl_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            >
            
            <ImageButton 
	            android:id="@+id/top_info__btn_share"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:layout_marginLeft="5dp"
	            android:contentDescription="@string/common_img_desc"
	            android:scaleType="fitXY"
	            android:background="@null"
	            />
            
            <ImageButton
                android:id="@+id/top_info__btn_fav"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/common_img_desc"
                android:scaleType="fitXY"
                android:layout_toRightOf="@id/top_info__btn_share"
                android:layout_marginLeft="5dp"
                android:background="@null"
                />
        </RelativeLayout>
        
        <LinearLayout 
            android:id="@+id/top_info__tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginRight="15dp"
            android:layout_below="@id/top_info__lbl_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            />
        
        <TextView
            android:id="@+id/top_info__lbl_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="72sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_below="@id/top_info__options_layout"
            android:layout_marginLeft="5dp"
            />
        
        <TextView
            android:id="@+id/top_info__lbl_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/top_info__lbl_distance"
            android:layout_below="@id/top_info__options_layout"
            />
    </RelativeLayout>
</RelativeLayout>
